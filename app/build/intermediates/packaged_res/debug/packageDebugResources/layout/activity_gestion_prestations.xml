<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8FF"
    tools:context=".GestionPrestationsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/services_de"
                android:textColor="#5D4A8A"
                android:textSize="16sp"
                android:alpha="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beaute"
                android:textColor="#5D4A8A"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting"/>

            <!-- Profile Icon -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#8B6BC9"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitle">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/profile"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@android:color/white"                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSearch"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="27dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnFilter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/search"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#666666" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/rechercher"
                        android:inputType="text"
                        android:importantForAutofill="yes"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:textColorHint="#666666"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Filter Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnFilter"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:backgroundTint="#8B6BC9"
                app:cardCornerRadius="27dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="@id/cardSearch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardSearch">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/filter"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <!-- Filter Chips -->
            <HorizontalScrollView
                android:id="@+id/scrollFilters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSearch">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp">

                    <!-- Chip: Tous -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/chipAll"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginEnd="12dp"
                        android:backgroundTint="#8B6BC9"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="10dp"
                            android:text="@string/tous"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Chip: Coupe -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/chipCoupe"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginEnd="12dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="10dp"
                            android:text="@string/coupe"
                            android:textColor="#5D4A8A"
                            android:textSize="14sp"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Chip: Coloration -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/chipColor"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginEnd="12dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="10dp"
                            android:text="@string/coloration"
                            android:textColor="#5D4A8A"
                            android:textSize="14sp"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Chip: Soin -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/chipSoin"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="10dp"
                            android:text="@string/soin"
                            android:textColor="#5D4A8A"
                            android:textSize="14sp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Stats Cards Grid - CORRECTION ICI -->
            <LinearLayout
                android:id="@+id/gridStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scrollFilters">

                <!-- Première ligne -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Card: Services -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/services"
                                android:src="@android:drawable/ic_menu_edit"
                                android:tint="#8B6BC9"/>

                            <TextView
                                android:id="@+id/tvTotalServices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="12"
                                android:textColor="#5D4A8A"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/services"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card: Prix Moyen -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/price"
                                android:src="@android:drawable/ic_dialog_info"
                                android:tint="#8B6BC9"/>

                            <TextView
                                android:id="@+id/tvAvgPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="85 DT"
                                android:textColor="#5D4A8A"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_price"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Deuxième ligne -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card: Durée Moyenne -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/duration"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:tint="#8B6BC9"/>

                            <TextView
                                android:id="@+id/tvAvgDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="2h"
                                android:textColor="#5D4A8A"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_duration"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card: Catégories -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/categories"
                                android:src="@android:drawable/ic_menu_view"
                                android:tint="#8B6BC9"/>

                            <TextView
                                android:id="@+id/tvCategories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="8"
                                android:textColor="#5D4A8A"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categories"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Section Header -->
            <LinearLayout
                android:id="@+id/layoutSectionHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gridStats">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mes_services"
                    android:textColor="#5D4A8A"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="@string/voir_tout"
                    android:textColor="#8B6BC9"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Services List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPrestations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutSectionHeader"/>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="40dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutSectionHeader">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/empty"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:tint="#8B6BC9"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/aucun_service"
                    android:textColor="#5D4A8A"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/ajouter_premier_service"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_service"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#8B6BC9"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tint="@android:color/white"
        android:layout_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
